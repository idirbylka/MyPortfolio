@model MyPortfolio.Models.Project

@{
    ViewData["Title"] = Model.Title;
}

<div class="container projects-container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">

      <h1 class="fw-bold mb-4">@Model.Title</h1>

      @if (Model.ScreenShots != null && Model.ScreenShots.Any())
      {
        <div id="screenshotCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
          <div class="carousel-inner rounded shadow-sm">
            @foreach (var (screenshot, index) in Model.ScreenShots.Select((value, i) => (value, i)))
            {
              <div class="carousel-item @(index == 0 ? "active" : "")">
                <img src="@Url.Action("GetScreenshot", "Projects", new { id = screenshot.Id })" class="d-block w-100 rounded" alt="Screenshot @(index + 1)">
              </div>
            }
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#screenshotCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#screenshotCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      }

      <div class="card mb-4 shadow-sm rounded">
        <div class="card-body">
          <h5 class="card-title fw-bold">Technologies Used</h5>
          <p class="card-text fs-5">@Html.Raw(Model.Technologies)</p>
        </div>
      </div>

      <div class="card mb-4 shadow-sm rounded">
        <div class="card-body">
          <h5 class="card-title fw-bold">Project Description</h5>
          <p class="card-text fs-5">@Html.Raw(Model.Description)</p>
        </div>
      </div>

      <div class="d-flex gap-3">
        @if (!string.IsNullOrEmpty(Model.LiveUrl))
        {
          <a href="@Model.LiveUrl" target="_blank" class="see-inside-btn px-4 py-2">View Live Site</a>
        }
        @if (!string.IsNullOrEmpty(Model.RepoUrl))
        {
          <a href="@Model.RepoUrl" target="_blank" class="see-inside-btn px-4 py-2">View on GitHub</a>
        }
      </div>

    </div>
  </div>
</div>
