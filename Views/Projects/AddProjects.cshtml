@model Project
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card-header bg-light text-black">
                <h2>Add Projects</h2>
            </div>
            <div class="card-body">
                <form asp-action="AddProjects" method="post" enctype="multipart/form-data">

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="text-white">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="text-white">Description</label>
                        <textarea asp-for="Description" class="form-control" placeholder="Enter a Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Technologies" class="text-white">Technologies</label>
                        <textarea asp-for="Technologies" class="form-control" placeholder="Technologies"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label for="screenShots" class="text-white">ScreenShots</label>
                        <input type="file" name="screenShots" class="form-control" multiple />
                        <span asp-validation-for="ScreenShots" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LiveUrl" class="text-white">LiveUrl</label>
                        <input asp-for="LiveUrl" class="form-control" placeholder="Enter a LiveUrl" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RepoUrl" class="text-white">RepoUrl</label>
                        <input asp-for="RepoUrl" class="form-control" placeholder="Enter a RepoUrl" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Category" class="text-white">Category</label>
                        <textarea asp-for="Category" class="form-control" placeholder="Enter a Category"></textarea>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <a asp-controller="Projects" asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <!-- TinyMCE from CDN -->
  <script src="https://cdn.jsdelivr.net/npm/tinymce@6.8.3/tinymce.min.js" referrerpolicy="origin"></script>
  <script>
    const tinyConfig = {
      menubar: false,
      plugins: 'lists link',
      toolbar: 'bold italic underline | bullist numlist | link | removeformat',
      branding: false,
      height: 260,
      convert_urls: false,
      // keep the HTML simple + safe (we’ll also sanitize server side)
      valid_elements: 'p,br,ul,ol,li,strong/b,em/i,u,a[href|target=_blank]',
      content_style: 'body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Arial,sans-serif;line-height:1.5;} ul,ol{margin-left:1.25rem;}'
    };
    tinymce.init({ ...tinyConfig, selector: '#Description' });
    tinymce.init({ ...tinyConfig, selector: '#Technologies' });
  </script>
}