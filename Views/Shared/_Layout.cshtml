<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPortfolio</title>
    <script type="importmap"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortfolio.styles.css" asp-append-version="true" />
</head>

<body class="body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand text-black fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">Idir Belkacem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="CV" asp-action="Index">My CV</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="MyExperience" asp-action="Index">My Experience</a>
                        </li> *@
                        @* <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Projects" asp-action="Index">My Projects</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="AboutMe">About Me</a>
                        </li>
                    </ul>
                    <a href="/#contact" class="contact btn">Hire Me</a>
                    @* <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="@(ViewData["ContainerClass"] ?? "container")">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div id="successMessage" class="alert alert-success alert-dismissible fade show mt-3">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-area">
            <div class="row">
                <div class="col-5 col-md-4 col-lg-3">
                    &copy; 2025 - Idir Belkacem
                </div>
                <div class="col-3 col-md-2 col-lg-1">
                    <a href="/Imprint">Imprint</a>
                </div>
                <div class="col-4 col-md-3 col-lg-3">
                    <a href="/PrivacyPolicy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
